@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Tur Rehberleri Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{count++;}
            <td>@count</td>
            <td><img src="@item.image" class="rounded-circle" height="75px;" width="75px;" /></td>
            <td>@item.name</td>
            <td>@item.description</td>
            
            @{
                if (item.status)
                {
                    <td><a href="/Admin/Guide/ChangeToFalse/@item.guideId" class="btn btn-outline-danger">Pasif Yap</a></td>
                }
                else
                {
                    <td><a href="/Admin/Guide/ChangeToTrue/@item.guideId" class="btn btn-outline-success">Aktif Yap</a></td>
                }                    
            }

            <td><a href="/Admin/Guide/EditGuide/" class="btn btn-outline-secondary">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Ekle</a>